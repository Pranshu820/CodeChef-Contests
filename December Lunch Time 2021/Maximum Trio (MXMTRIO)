#include <bits/stdc++.h>
#define ll long long
#define mod 1000000007
using namespace std;



int main(){
ios_base::sync_with_stdio(false); cin.tie(0);
int t; cin >> t; while(t--){
    int n;
    cin >> n;
    vector<ll> v(n);
    for(auto &i : v) cin >> i;
    sort(v.begin(), v.end());

    cout << (v[n - 1] - v[0]) * v[n - 2] << "\n";

}
    return 0;
}
