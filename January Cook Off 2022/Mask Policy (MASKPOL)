#include <bits/stdc++.h>
#define ll long long
#define mod 1000000007
using namespace std;



int main(){
ios_base::sync_with_stdio(false); cin.tie(0);
int t; cin >> t; while(t--){
    int n, a;
    cin >> n >> a;
    int b = n - a;
    if(a <= b) cout << a << "\n";
    else cout << b << "\n";
}
    return 0;
}
