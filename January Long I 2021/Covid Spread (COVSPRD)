#include <bits/stdc++.h>
#define ll long long
#define mod 1000000007
using namespace std;



int main(){
ios_base::sync_with_stdio(false); cin.tie(0);
int t; cin >> t; while(t--){
    ll n, d;
    cin >> n >> d;

    if(d <= 10) cout << min(n, (ll)(pow(2, d))) << "\n";
    else if(d > 20) cout << n << "\n";
    else cout << min(n, (ll)(1024 * pow(3, d - 10))) << "\n";
    
}
    return 0;
}
