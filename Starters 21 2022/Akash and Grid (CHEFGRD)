#include <bits/stdc++.h>
#define ll long long
#define mod 1000000007
using namespace std;



int main(){
ios_base::sync_with_stdio(false); cin.tie(0);
int t; cin >> t; while(t--){
    int n, x, y;
    cin >> n >> x >> y;
    if(x == y || x + y == n + 1) cout << "0\n";
    else if(abs(x - y) & 1) cout << "1\n";
    else cout << "0\n";

}
    return 0;
}
